	<mx:DateField y="10" left="369" width="90"/>
	<mx:DataGrid left="10" right="10" top="36" bottom="114">
		<mx:columns>
			<mx:DataGridColumn headerText="标题" dataField="col1"/>
			<mx:DataGridColumn headerText="类型" dataField="col2"/>
			<mx:DataGridColumn headerText="创建日期" dataField="col3"/>
			<mx:DataGridColumn headerText="内容" dataField="col3" visible="false"/>
		</mx:columns>
	</mx:DataGrid>
	<mx:HRule height="6" bottom="100" left="10" right="10"/>
	<mx:Label text="标题：" bottom="72" left="10"/>
	<mx:TextInput text="Caption is here" left="53" bottom="70" editable="false"/>
