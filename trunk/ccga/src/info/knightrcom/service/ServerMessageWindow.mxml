<?xml version="1.0" encoding="utf-8"?>
<service:FunctionWindow xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:service="info.knightrcom.service.*" width="100%" height="100%">
    <mx:Label text="即时消息：" left="10" top="10"/>
    <mx:Label left="10" top="30">
        <mx:text>{instantMessage.text.length + "/70"}</mx:text>
    </mx:Label>
    <mx:TextArea left="80" right="10" top="10" height="60" id="instantMessage" maxChars="70" enabled="{radioInstantMessage.selected}"/>
    <mx:Label text="控制台消息：" left="10" top="80"/>
    <mx:Label left="10" top="100">
        <mx:text>{consoleMessage.text.length + "/240"}</mx:text>
    </mx:Label>
    <mx:TextArea top="80" bottom="40" right="10" left="80" id="consoleMessage" maxChars="240" enabled="{radioConsoleMessage.selected}"/>
    <mx:Button label="发送" right="10" bottom="10"/>
    <mx:RadioButtonGroup id="messageGroup"/>
    <mx:RadioButton id="radioInstantMessage" label="即时消息" groupName="messageGroup" right="70" bottom="10"/>
    <mx:RadioButton id="radioConsoleMessage" label="控制台消息" groupName="messageGroup" right="140" bottom="10" selected="true"/>
	<service:title>{"发送" + messageGroup.selectedValue}</service:title>
</service:FunctionWindow>
