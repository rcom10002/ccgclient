<?xml version="1.0" encoding="utf-8"?>
<FunctionWindow xmlns="info.knightrcom.service.*"
				xmlns:mx="http://www.adobe.com/2006/mxml"
				xmlns:net="flash.net.*"
				creationComplete="creationCompleteHandler();">
	<mx:Script>
		<![CDATA[
			import mx.utils.Base64Decoder;
			import mx.events.DragEvent;
			import info.knightrcom.model.OperationMethod;
			import mx.controls.Alert;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			import mx.controls.TextArea;
			import mx.containers.FormItem;
			import mx.formatters.DateFormatter;
			import info.knightrcom.util.HttpServiceProxy;
			import info.knightrcom.util.ListenerBinder;
			import info.knightrcom.service.LocalReportScoreService;
			import mx.events.ItemClickEvent;

			public static var CURRENT_PROFILE_ID:String;

			public var currentOperationMethod:OperationMethod;
			
			private var url:String = "";

			protected function defaultSearch():void
			{
				var dateFormatter:DateFormatter=new DateFormatter();
				dateFormatter.formatString="YYYYMMDD";
				HttpServiceProxy.send(LocalReportScoreService.READ_PERIODLY_SUM, {USER_ID: userId.text, FROM_DATE: dateFormatter.format(dateFrom.selectedDate), TO_DATE: dateFormatter.format(dateTo.selectedDate), CURRENT_PAGE: CURRENT_PAGE}, infoService);
				btnDownload.visible = false;
			}

			private function onEvent(evt:Event):void {
                Alert.show(evt.toString(), evt.type);
            }
            
            private function btn_click(evt:MouseEvent):void {
            	if (url.length == 0) {
            		Alert.show(url);
            		Alert.show("暂时无法下载，请重新导出！", "业务分析报表");
            		btnDownload.visible = false;
            		return;
            	}
                var urlReq:URLRequest = new URLRequest(url);
                fileReference.download(urlReq);
            }
            
			protected function creationCompleteHandler():void
			{
				// 状态初始化
				initializeEachState("LIST");
				// 事件绑定
				// 检索
				ListenerBinder.bind(btnSearch, MouseEvent.CLICK, function(event:MouseEvent):void
					{
						CURRENT_PAGE=1;
						defaultSearch();
					});
				// 翻页
				ListenerBinder.bind(pageRoller, ItemClickEvent.ITEM_CLICK, function(event:ItemClickEvent):void
					{
						if (isNaN(TOTAL_PAGE) || TOTAL_PAGE < 1)
						{
							return;
						}
						if (event.index == 0)
						{
							CURRENT_PAGE--;
						}
						else if (event.index == 1)
						{
							CURRENT_PAGE++;
						}
						defaultSearch();
					});
				// 导出
				ListenerBinder.bind(btnCsvExport, MouseEvent.CLICK, function(event:MouseEvent):void 
				{
					if (TOTAL_PAGE > 0) {
						var dateFormatter:DateFormatter=new DateFormatter();
						dateFormatter.formatString="YYYYMMDD";
						HttpServiceProxy.send(LocalReportScoreService.CSV_EXPORT, {USER_ID: userId.text, FROM_DATE: dateFormatter.format(dateFrom.selectedDate), TO_DATE: dateFormatter.format(dateTo.selectedDate), CURRENT_PAGE: CURRENT_PAGE}, null, function(event:ResultEvent):void
						{
							if (new XML(event.result).result == "SUCCESS")
							{
								url = new XML(event.result).tag;
								btnDownload.visible = true;
							}
							else
							{
								Alert.show("导出失败！", "积分结算报表");
							}
						}, function(event:FaultEvent):void
						{
							Alert.show("导出失败！", "积分结算报表");
						});
					} else {
						Alert.show("还没有查询结果不能导出！", "积分结算报表");
					}
				});
			}
		]]>
	</mx:Script>
	<net:FileReference id="fileReference"
            complete="onEvent(event);"
            cancel="onEvent(event);"
            httpStatus="onEvent(event);"
            ioError="onEvent(event);" />
	<states>
		<mx:State name="LIST">
			<mx:AddChild position="lastChild">
				<mx:HBox left="10"
						 right="10"
						 top="10">
					<mx:FormItem label="用户ID">
						<mx:TextInput id="userId"/>
					</mx:FormItem>
					<mx:Label text="从："/>
					<mx:DateField id="dateFrom">
						<mx:selectedDate>{new Date()}</mx:selectedDate>
						<mx:formatString>YYYY年MM月DD日</mx:formatString>
					</mx:DateField>
					<mx:Label text="至："/>
					<mx:DateField id="dateTo">
						<mx:selectedDate>{new Date()}</mx:selectedDate>
						<mx:formatString>YYYY年MM月DD日</mx:formatString>
					</mx:DateField>
					<mx:Button id="btnSearch"
							   label="查询"/>
					<mx:Button id="btnCsvExport"
							   label="导出"/>
					<mx:Button id="btnDownload"
				               label="下载" click="btn_click(event);" visible="false"/>
				</mx:HBox>
			</mx:AddChild>
			<mx:AddChild position="lastChild">
				<mx:DataGrid top="40"
							 left="10"
							 right="10"
							 bottom="10"
							 id="datagrid">
					<mx:dataProvider>{infoService.lastResult.entityList.ReportScoreInfo}</mx:dataProvider>
					<mx:columns>
						<mx:DataGridColumn dataField="profileId"
										   visible="false"/>
						<mx:DataGridColumn dataField="password"
										   visible="false"/>
						<mx:DataGridColumn headerText="用户ID"
										   dataField="userId"/>
						<mx:DataGridColumn headerText="总次数"
										   dataField="totalTimes"/>
						<mx:DataGridColumn headerText="总积分"
										   dataField="totalScores"/>
						<mx:DataGridColumn headerText="获胜次数"
										   dataField="winTimes"/>
						<mx:DataGridColumn headerText="获胜积分"
										   dataField="winScores"/>
						<mx:DataGridColumn headerText="失败次数"
										   dataField="loseTimes"/>
						<mx:DataGridColumn headerText="失败积分"
										   dataField="loseScores"/>
						<mx:DataGridColumn headerText="平局次数"
										   dataField="drawTimes"/>
						<mx:DataGridColumn headerText="平局积分"
										   dataField="drawScores"/>
						<mx:DataGridColumn headerText="总系统分"
										   dataField="totalSystemScore"/>
						<mx:DataGridColumn headerText="开始统计时间"
										   dataField="startDate"/>
						<mx:DataGridColumn headerText="结束统计时间"
										   dataField="endDate"/>
					</mx:columns>
				</mx:DataGrid>
			</mx:AddChild>
			<mx:AddChild position="lastChild">
				<mx:ControlBar paddingTop="0"
							   paddingBottom="0"
							   horizontalAlign="right">
					<mx:Label id="lblPage"
							  text="{infoService.lastResult.pagination.currentPage + '/' + infoService.lastResult.pagination.totalPage}"/>
					<mx:LinkBar id="pageRoller">
						<mx:Array>
							<mx:Object label="前页"/>
							<mx:Object label="后页"/>
						</mx:Array>
					</mx:LinkBar>
				</mx:ControlBar>
			</mx:AddChild>
			<mx:SetProperty name="title"
							value="积分结算报表"/>
		</mx:State>
	</states>
	<mx:Number id="CURRENT_PAGE">{infoService.lastResult.pagination.currentPage}</mx:Number>
	<mx:Number id="TOTAL_PAGE">{infoService.lastResult.pagination.totalPage}</mx:Number>
</FunctionWindow>
