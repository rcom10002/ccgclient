<?xml version="1.0" encoding="utf-8"?>
<mx:Module xmlns:mx="http://www.adobe.com/2006/mxml"
		   layout="absolute"
		   minWidth="400"
		   minHeight="300"
		   width="100%"
		   height="100%"
		   xmlns:sw="info.knightrcom.sw.*"
		   currentState="WELCOME"
		   xmlns:service="info.knightrcom.service.*">
	<mx:states>
		<mx:State name="GROUP_USER_EDIT">
			<mx:AddChild position="lastChild">
				<service:GroupUserWindow>
				</service:GroupUserWindow>
			</mx:AddChild>
		</mx:State>
		<mx:State name="WELCOME">
			<mx:AddChild position="lastChild">
				<mx:HBox width="100%"
						 height="100%"
						 verticalAlign="middle"
						 horizontalAlign="center">
					<mx:Label text="Welcome"
							  fontWeight="bold"
							  fontSize="36"
							  fontFamily="Verdana"/>
				</mx:HBox>
			</mx:AddChild>
		</mx:State>
		<mx:State name="SOLO_USER_EDIT">
			<mx:AddChild position="lastChild">
				<service:PlayerProfileWindow>
				</service:PlayerProfileWindow>
			</mx:AddChild>
		</mx:State>
		<mx:State name="GAME_PARAM_EDIT">
			<mx:AddChild position="lastChild">
				<service:GameConfigureWindow>
				</service:GameConfigureWindow>
			</mx:AddChild>
		</mx:State>
		<mx:State name="GAME_RED5_PARAM_EDIT">
			<mx:AddChild position="lastChild">
				<service:GameConfigRed5Window>
				</service:GameConfigRed5Window>
			</mx:AddChild>
		</mx:State>
		<mx:State name="GAME_FIGHTLANDLORD_PARAM_EDIT">
			<mx:AddChild position="lastChild">
				<service:GameConfigFightLandlordWindow>
				</service:GameConfigFightLandlordWindow>
			</mx:AddChild>
		</mx:State>
		<mx:State name="GAME_QIONGWIN_PARAM_EDIT">
			<mx:AddChild position="lastChild">
				<service:GameConfigQiongWinWindow>
				</service:GameConfigQiongWinWindow>
			</mx:AddChild>
		</mx:State>
		<mx:State name="GAME_PUSHDOWNWIN_PARAM_EDIT">
			<mx:AddChild position="lastChild">
				<service:GameConfigPushDownWinWindow>
				</service:GameConfigPushDownWinWindow>
			</mx:AddChild>
		</mx:State>
		<mx:State name="ADMIN_MANUAL">
			<mx:AddChild position="lastChild">
				<service:AdminManual right="10" left="10" top="10" bottom="10">
				</service:AdminManual>
			</mx:AddChild>
		</mx:State>
		<mx:State name="ABOUT_GAME_PLATFORM">
			<mx:AddChild position="lastChild">
				<service:AboutGamePlatform left="10" top="10" bottom="10" right="10">
				</service:AboutGamePlatform>
			</mx:AddChild>
		</mx:State>
		<mx:State name="REPORT_SCORE_EDIT">
			<mx:AddChild position="lastChild">
				<service:ReportScoreWindow>
				</service:ReportScoreWindow>
			</mx:AddChild>
		</mx:State>
		<mx:State name="REPORT_BUSINESS_EDIT">
			<mx:AddChild position="lastChild">
				<service:ReportBusinessWindow>
				</service:ReportBusinessWindow>
			</mx:AddChild>
		</mx:State>
	</mx:states>
</mx:Module>
