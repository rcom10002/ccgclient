<?xml version="1.0" encoding="utf-8"?>
<mx:Module xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" minWidth="800" minHeight="600" xmlns:component="component.*">
    <mx:Script>
        <![CDATA[
            import info.knightrcom.assets.MahjongResource;
        ]]>
    </mx:Script>
	<!-- 上侧区域 -->
	<mx:HBox id="candidatedUp"
			 height="80"
			 horizontalGap="0"
			 horizontalAlign="center"
			 verticalAlign="middle"
			 top="0"
			 width="600" horizontalCenter="40">
	</mx:HBox>
	<!-- 右侧区域 -->
	<mx:VBox id="candidatedRight"
			 width="80"
			 right="0"
			 horizontalAlign="center"
			 verticalAlign="middle"
			 verticalGap="-20" verticalCenter="20" height="400">
	</mx:VBox>
	<!-- 下侧区域 -->
	<mx:HBox id="candidatedDown"
			 height="80"
			 horizontalGap="0"
			 horizontalAlign="center"
			 bottom="0"
			 verticalAlign="middle" horizontalCenter="-40" width="600">
	</mx:HBox>
	<!-- 左侧区域 -->
	<mx:VBox id="candidatedLeft"
			 width="80"
			 horizontalAlign="center"
			 verticalAlign="middle"
			 verticalGap="-20" x="0" verticalCenter="-20" height="400">
	</mx:VBox>
	<mx:Canvas left="170" right="170" top="175" bottom="200">
		<!-- 牌桌区域 -->
		<mx:Tile id="dealed"
				 top="0"
				 left="0"
				 horizontalGap="1"
				 verticalGap="-7"
				 verticalAlign="middle" right="0" bottom="0">
		</mx:Tile>
		<mx:TextArea id="testArea" height="100" left="0" right="0" bottom="40" /><mx:Button id="testFresh" width="50" height="50" right="0" bottom="0"/>
	</mx:Canvas>
	<!-- TODO 暂时保留 -->
    <mx:Style>
    	.unhighlight {
			paddingTop : 1;
			paddingRight : 1;
			paddingBottom : 1;
			paddingLeft : 1;
    	}
    	.highlight {
			paddingTop : 1;
			paddingRight : 1;
			paddingBottom : 1;
			paddingLeft : 1;
            borderStyle : solid;
            borderThickness : 1;
            borderSides : "left right top bottom";
			borderColor : #48b;
    	}
    </mx:Style>
	<!-- TODO 暂时保留 -->
