			<component:MahjongButton source="{info.knightrcom.assets.MahjongResource.MAHJONG_down_dealed_DEFAULT}" allowSelect="false"/>
			<component:MahjongButton source="{info.knightrcom.assets.MahjongResource.MAHJONG_down_dealed_DEFAULT}" allowSelect="false"/>
			<component:MahjongButton source="{info.knightrcom.assets.MahjongResource.MAHJONG_down_dealed_DEFAULT}" allowSelect="false"/>
		</mx:HBox>
