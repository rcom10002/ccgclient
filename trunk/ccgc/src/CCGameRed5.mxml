<?xml version="1.0" encoding="utf-8"?>
<mx:Module xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute"
		horizontalAlign="center"
		verticalAlign="middle"
		width="960"
		height="720"
        minWidth="800"
		minHeight="600">
    <mx:Style source="info/knightrcom/assets/Red5GameStyle.css" />
    <!-- 上侧区域 -->
    <mx:HBox id="candidatedUp"
             verticalScrollPolicy="off"
             horizontalScrollPolicy="off"
             height="120"
             horizontalGap="-55"
             horizontalAlign="center"
             verticalAlign="bottom"
             top="0"
             left="220"
             right="220">
    </mx:HBox>
    <mx:HBox id="candidatedTipUp"
             verticalScrollPolicy="off"
             horizontalScrollPolicy="off"
             height="80"
             horizontalGap="-55"
             horizontalAlign="center"
             verticalAlign="bottom"
             top="40"
             width="200" horizontalCenter="0">
    </mx:HBox>
	<!-- 右侧区域 -->
    <mx:VBox id="candidatedRight"
             verticalScrollPolicy="off"
             horizontalScrollPolicy="off"
             width="120"
             top="128"
             bottom="128"
             right="92"
             horizontalAlign="left"
             verticalAlign="middle"
             verticalGap="-78">
    </mx:VBox>
    <mx:VBox id="candidatedTipRight"
             verticalScrollPolicy="off"
             horizontalScrollPolicy="off"
             width="120"
             right="92"
             horizontalAlign="right"
             verticalAlign="middle"
             verticalGap="-78" height="200" verticalCenter="0">
    </mx:VBox>
	<!-- 下侧区域 -->
    <mx:HBox id="candidatedDown"
             verticalScrollPolicy="off"
             horizontalScrollPolicy="off"
             height="120"
             horizontalGap="-55"
             horizontalAlign="center"
             bottom="0"
             verticalAlign="top" left="220" right="220">
	</mx:HBox>
    <mx:HBox id="candidatedTipDown"
             verticalScrollPolicy="off"
             horizontalScrollPolicy="off"
             height="80"
             horizontalGap="-55"
             horizontalAlign="center"
             bottom="0"
             verticalAlign="top" width="200" horizontalCenter="0">
    </mx:HBox>
	<!-- 左侧区域 -->
    <mx:VBox id="candidatedLeft"
             verticalScrollPolicy="off"
             horizontalScrollPolicy="off"
             width="120"
             top="128"
             bottom="128"
             left="92"
             horizontalAlign="right"
             verticalAlign="middle"
             verticalGap="-78">
    </mx:VBox>
    <mx:VBox id="candidatedTipLeft"
             verticalScrollPolicy="off"
             horizontalScrollPolicy="off"
             width="120"
             left="92"
             horizontalAlign="left"
             verticalAlign="middle"
             verticalGap="-78" height="200" verticalCenter="0">
    </mx:VBox>
	<mx:Canvas left="220" right="220" top="128" bottom="128">
		<!-- 牌桌区域 -->
		<mx:HBox id="dealedUp"
				 height="100"
				 top="10"
				 left="100"
				 horizontalGap="-55"
				 verticalGap="-78"
				 right="100"
				 horizontalScrollPolicy="off"
				 horizontalAlign="center"
				 verticalAlign="middle">
		</mx:HBox>
		<mx:HBox id="dealedRight"
				 right="0"
				 top="118"
				 horizontalGap="-55"
				 verticalGap="-78"
				 width="345"
				 horizontalScrollPolicy="off"
				 horizontalAlign="right"
				 verticalAlign="middle" bottom="118">
		</mx:HBox>
		<mx:HBox id="dealedDown"
				 height="100"
				 right="100"
				 bottom="10"
				 horizontalGap="-55"
				 verticalGap="-78"
				 left="100"
				 horizontalScrollPolicy="off"
				 horizontalAlign="center"
				 verticalAlign="middle">
		</mx:HBox>
		<mx:HBox id="dealedLeft"
				 left="0"
				 horizontalGap="-55"
				 verticalGap="-78"
				 top="118"
				 width="345"
				 horizontalScrollPolicy="off"
				 horizontalAlign="left"
				 verticalAlign="middle" bottom="118">
		</mx:HBox>
	</mx:Canvas>
	<!-- 操作区域 -->
	<mx:VBox horizontalAlign="center"
			 left="200"
			 right="200"
			 bottom="120"
			 height="110"
             verticalGap="2"
             verticalScrollPolicy="off">
		<mx:ButtonBar id="btnBarPokers" borderStyle="solid" horizontalGap="5">
			<mx:dataProvider>
				<mx:String>重选</mx:String>
				<mx:String>不要</mx:String>
				<mx:String>提示</mx:String>
				<mx:String>出牌</mx:String>
			</mx:dataProvider>
		</mx:ButtonBar>
		<mx:ButtonBar id="btnBarPokersTipA" borderStyle="solid" horizontalGap="5" visible="{btnBarPokers.visible}">
			<mx:dataProvider>
				<mx:String>对子</mx:String>
				<mx:String>三同张</mx:String>
				<mx:String>四同张</mx:String>
				<mx:String>五同张</mx:String>
				<mx:String>六同张</mx:String>
				<mx:String>七同张</mx:String>
				<mx:String>八同张</mx:String>
			</mx:dataProvider>
		</mx:ButtonBar>
		<mx:ButtonBar id="btnBarPokersTipB" borderStyle="solid" horizontalGap="5" visible="{btnBarPokers.visible}">
			<mx:dataProvider>
				<mx:String>四连顺</mx:String>
				<mx:String>五连顺</mx:String>
				<mx:String>对子三连顺</mx:String>
				<mx:String>对子四连顺</mx:String>
				<mx:String>对子五连顺</mx:String>
			</mx:dataProvider>
		</mx:ButtonBar>
		<mx:ButtonBar id="btnBarPokersTipC" borderStyle="solid" horizontalGap="5" visible="{btnBarPokers.visible}">
			<mx:dataProvider>
				<mx:String>三同三连顺</mx:String>
				<mx:String>三同四连顺</mx:String>
				<mx:String>三同五连顺</mx:String>
				<mx:String>四同三连顺</mx:String>
			</mx:dataProvider>
		</mx:ButtonBar>
	</mx:VBox>
    <!-- 提示区域 -->
    <mx:ProgressBar id="timerTip" x="10" y="-300"/>
    <mx:Text id="arrowTip" x="10" y="-400" selectable="false"/>
    <mx:Image id="infoBoard" source="{Red5GameResource.INFO_BOARD}" x="0" y="0" />
    <mx:Text id="infoBoardText" x="55" y="40" width="250" text="{arrowTip.text.replace(/^.*(我.*?[0-9]+).*$/g, '$1')}" selectable="false" />
    <!-- 背景图片区域 -->
    <mx:Script>
        <![CDATA[
            import info.knightrcom.assets.Red5GameResource;
            import mx.controls.Button;
        ]]>
    </mx:Script>
    <mx:Image id="bgCurtainLeft" source="{Red5GameResource.CURTAIN_LEFT}" left="0" top="0"/>
    <mx:Image id="bgCurtainRight" source="{Red5GameResource.CURTAIN_RIGHT}" right="0" top="0"/>
    <mx:Image id="bgLogo" source="{Red5GameResource.LOGO}" horizontalCenter="0" verticalCenter="0"/>
    <mx:Image id="bgLaceLeft" source="{Red5GameResource.LACE_LEFT}" left="0" bottom="0"/>
    <mx:Image id="bgLaceRight" source="{Red5GameResource.LACE_RIGHT}" right="0" bottom="0"/>
    <mx:creationComplete>
        <![CDATA[
        // 设置游戏按钮外观
        for each (var eachBar:ButtonBar in [btnBarPokers, btnBarPokersTipA, btnBarPokersTipB, btnBarPokersTipC]) {
            for each (var eachButton:Button in eachBar.getChildren()) {
                eachButton.styleName = "gameButton";
            }
        }
        ]]>
    </mx:creationComplete>
</mx:Module>
