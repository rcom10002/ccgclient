<?xml version="1.0" encoding="utf-8"?>
<mx:Module xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" minWidth="800" minHeight="600">
	<!-- 上侧区域 -->
	<mx:HBox id="candidatedUp"
			 height="150"
			 horizontalGap="-55"
			 horizontalAlign="center"
			 verticalAlign="bottom"
			 top="0"
			 left="50"
			 right="200">
	</mx:HBox>
	<!-- 右侧区域 -->
	<mx:VBox id="candidatedRight"
			 width="200"
			 top="50"
			 bottom="150"
			 right="0"
			 horizontalAlign="left"
			 verticalAlign="middle"
			 verticalGap="-78">
	</mx:VBox>
	<!-- 下侧区域 -->
	<mx:HBox id="candidatedDown"
			 height="150"
			 horizontalGap="-55"
			 horizontalAlign="center"
			 left="200"
			 right="50"
			 bottom="0"
			 verticalAlign="top">
	</mx:HBox>
	<!-- 左侧区域 -->
	<mx:VBox id="candidatedLeft"
			 width="200"
			 top="150"
			 bottom="50"
			 left="0"
			 horizontalAlign="right"
			 verticalAlign="middle"
			 verticalGap="-78">
	</mx:VBox>
	<mx:Canvas left="208" right="208" top="158" bottom="187">
		<!-- 牌桌区域 -->
		<mx:Tile id="dealedRight"
				 width="190"
				 height="125"
				 right="0"
				 top="0"
				 horizontalGap="-55"
				 verticalGap="-78"
				 verticalAlign="middle">
		</mx:Tile>
		<mx:Tile id="dealedDown"
				 height="125"
				 right="100"
				 bottom="0"
				 horizontalGap="-55"
				 verticalGap="-78"
				 verticalAlign="middle"
				 left="100">
		</mx:Tile>
		<mx:Tile id="dealedLeft"
				 width="190"
				 left="0"
				 horizontalGap="-55"
				 verticalGap="-78"
				 verticalAlign="middle"
				 top="0"
				 height="125">
		</mx:Tile>
	</mx:Canvas>
	<!-- 操作区域 -->
	<mx:HBox horizontalAlign="center"
			 left="200"
			 right="200"
			 bottom="149"
			 height="30">
		<mx:ButtonBar id="btnBarPokers" borderStyle="solid" horizontalGap="5" width="300">
			<mx:dataProvider>
				<mx:String>重选</mx:String>
				<mx:String>不要</mx:String>
				<mx:String>提示</mx:String>
				<mx:String>出牌</mx:String>
			</mx:dataProvider>
		</mx:ButtonBar>
	</mx:HBox>
	<mx:ProgressBar x="10" y="10" id="timerTip" visible="false"/>
</mx:Module>
